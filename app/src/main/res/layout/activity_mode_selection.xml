<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#22942137"
    tools:ignore="ExtraText">>

    <Button
        android:id="@+id/button1"
        android:layout_width="203dp"
        android:layout_height="117dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:background="@drawable/button_border"
        android:gravity="bottom"
        android:text="Збір замовлень"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:onClick="ClickButtonModeSelectionCollectionOrders"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="203dp"
        android:layout_height="117dp"
        android:layout_below="@id/button1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_border"
        android:gravity="bottom"
        android:text="Збір переміщень"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:onClick="ClickButtonModeSelectionCollectionTransfers"/>

    <ImageView
        android:layout_width="82dp"
        android:layout_height="90dp"
        android:layout_alignStart="@+id/button1"
        android:layout_alignEnd="@+id/button1"
        android:layout_alignBottom="@+id/button1"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginStart="65dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="30dp"
        android:contentDescription="@string/ImageSelectModeTransfer"
        android:importantForAccessibility="no"
        android:src="@drawable/orders_logo_button" />

    <ImageView
        android:layout_width="82dp"
        android:layout_height="90dp"
        android:layout_alignStart="@+id/button2"
        android:layout_alignEnd="@+id/button2"
        android:layout_alignBottom="@+id/button2"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginStart="65dp"
        android:layout_marginTop="170dp"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/transers_logo_button" />

