<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:contentDescription="@string/ImageCircleOrders"
    android:fitsSystemWindows="true"
    android:orientation="horizontal"
    android:padding="16dp">

    <!-- Зображення у вигляді кружка -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="@string/ImageCircleOrder"
        android:src="@drawable/circle_shape"
        tools:ignore="ImageContrastCheck" />

    <!-- Два рядки тексту -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Перший рядок (жирний шрифт) -->
        <TextView
            android:id="@+id/textViewBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>

        <!-- Другий рядок (звичайний шрифт) -->
        <TextView
            android:id="@+id/textViewNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"/>

        <!-- Третій рядок (звичайний шрифт) -->
        <TextView
            android:id="@+id/textViewNormal2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"/>


    </LinearLayout>

</LinearLayout>

